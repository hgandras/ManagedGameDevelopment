.unity-progress-bar {
    width: 90%;
    height: 30px;
    align-self: center;
    left: 0;
    bottom: 0;
    position: relative;
    top: 90%;
    right: 0;
}

.unity-progress-bar__progress {
    height: 80%;
    background-color: rgb(0, 123, 255);
}

.unity-progress-bar__background {
    width: 100%;
    height: 100%;
    background-color: rgb(0, 185, 255);
}

.unity-progress-bar__title {
    color: rgb(0, 0, 0);
}
